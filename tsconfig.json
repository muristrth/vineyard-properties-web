{
  "compilerOptions": {
    "target": "ES2022", // Update target to a more modern ECMAScript version
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true, // Good practice for cross-platform compatibility
    "noEmit": true, // Essential for frameworks like Next.js where compiler just checks types
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true, // Recommended for transpilers like Babel or SWC (used by Next.js)
    "jsx": "preserve",
    "incremental": true, // Speeds up subsequent compilations
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // Optional: Add some stricter checks if you want to enforce more type safety
    "noUncheckedIndexedAccess": true, // Catches potential undefined accesses on arrays/objects
    "noImplicitReturns": true, // Ensures all code paths in functions return a value
    "noFallthroughCasesInSwitch": true // Ensures switch cases don't fall through without break
  },
  "include": [
    "next-env.d.ts", // Important for Next.js global types
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // You added "build/types/**/*.ts", ensure this path is correct if you have custom type definitions there
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}